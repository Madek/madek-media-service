#!/usr/bin/env bash
set -eux
PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"
cd $PROJECT_DIR
source $PROJECT_DIR/support/clojure/bin/activate

rm -rf resources/media-service/public/js/
npm ci
npx shadow-cljs release app
rm -rf resources/media-service/public/js/cljs-runtime/

# vi: ft=sh
